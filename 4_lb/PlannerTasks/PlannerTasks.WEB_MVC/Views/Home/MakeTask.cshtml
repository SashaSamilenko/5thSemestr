@model PlannerTasks.WEB_MVC.Models.TaskViewModel

@{
    ViewBag.Title = "MakeTask";
}

<h2>MakeTask</h2>

@using (Html.BeginForm("MakeTask", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <input type="hidden" value="@ViewBag.EmployeeId" name="EmployeeId" />
    @Html.HiddenFor(model => model.Status)
    @Html.HiddenFor(model => model.StartTime)
    @Html.HiddenFor(model => model.TaskId)

    <div class="form-group">
        @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
            @Html.ValidationMessage("Description", "Please enter description with length more than 10", "text-danger")
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TimeExecution, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.TimeExecution, new { @class = "form-control" })
            @Html.ValidationMessage("TimeExecution", "Please enter expected execution hours between 1 and 24", "text-danger")
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CurrentPriority, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.CurrentPriority, new { @class = "form-control" })
            @Html.ValidationMessage("CurrentPriority", "Please enter priority between 1 and 3", "text-danger")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Повернутися до списку", "Index")
</div>